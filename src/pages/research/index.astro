---
import Base from "../../../src/layouts/Base.astro";
const pageTitle = '研究 · Kateiso';
const pageDesc = 'AI into XR 与餐饮数字化的研究卡片：从情绪记忆到服务节奏。';
const questions = [
  'XR 排练的情绪上下文如何跨次保留？',
  '餐厅体验分能否与供应链节奏实时联动？',
  'AI 在高噪声的现场（舞台/厨房）该如何表达不确定？'
];
const experiments = [
  {
    title: 'HACM Atlas',
    detail: '用 JSON-LD 描述 Feel/Frame/Flow 片段，派送给排练工具与写作助手。'
  },
  {
    title: 'XR Empathy Meter',
    detail: '心率 + 体感评分 + 现场访谈，把舞台能量可视化。'
  },
  {
    title: 'TasteOS Pulse',
    detail: '把补货、排班、顾客反馈写成因果图，帮助餐厅做每日校正。'
  }
];
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: pageTitle,
  description: pageDesc,
  inLanguage: 'zh-Hans',
  url: 'https://kateiso.dev/research.html'
};
---
<Base
  title={pageTitle}
  description={pageDesc}
  lang="zh-Hans"
  canonical="/research.html"
  alternates={[{ href: '/en/research.html', hrefLang: 'en' }]}
  languageToggle={{ href: '/en/research.html', label: 'EN', ariaLabel: 'View English Research' }}
  jsonLd={jsonLd}
>
  <section class="section">
    <div class="section__intro">
      <p class="hero__kicker">Research Loop</p>
      <h1>研究</h1>
      <p class="section__lede">每月复盘 AI × XR × 情感体验的交集，用更慢的方式写实验报告。</p>
    </div>
    <div class="research-grid">
      <div class="research-card">
        <h2>核心问题</h2>
        <ul>
          {questions.map((q) => <li>{q}</li>)}
        </ul>
      </div>
      <div class="research-card">
        <h2>当前实验</h2>
        <ul>
          {experiments.map((exp) => <li><strong>{exp.title}</strong> — {exp.detail}</li>)}
        </ul>
      </div>
    </div>
  </section>
</Base>
