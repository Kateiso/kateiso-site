---
export interface Props {
  title: string;
  description: string;
  meta: string; // e.g., "Essay Â· October 2025"
}
const { title, description, meta } = Astro.props as Props;
---
<layout:fragment>
  <section class="article">
    <article>
      <header class="article__header">
        <p class="article__meta">{meta}</p>
        <h1>{title}</h1>
        <p class="article__summary">{description}</p>
      </header>
      <slot />
      <footer class="article__footer">
        <p>Questions or collaborations? Email <a href="mailto:C.yibo2@gmail.com">C.yibo2@gmail.com</a>.</p>
      </footer>
    </article>
  </section>
</layout:fragment>

