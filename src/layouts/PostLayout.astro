---
export interface Props {
  title: string;
  description: string;
  meta: string; // e.g., "Essay · October 2025"
  lang?: string;
}
const { title, description, meta, lang = 'zh-Hans' } = Astro.props as Props;
const footerCopy = lang.startsWith('en')
  ? 'Questions or collaborations? Email '
  : '合作或共创欢迎联系邮箱 ';
---
<layout:fragment>
  <section class="article">
    <article>
      <header class="article__header">
        <p class="article__meta">{meta}</p>
        <h1>{title}</h1>
        <p class="article__summary">{description}</p>
      </header>
      <slot />
      <footer class="article__footer">
        <p>{footerCopy}<a href="mailto:C.yibo2@gmail.com">C.yibo2@gmail.com</a>.</p>
      </footer>
    </article>
  </section>
</layout:fragment>
